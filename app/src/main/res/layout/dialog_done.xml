<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dialog_title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/sfreguler"
            android:text=" "
            android:textColor="@color/color4"
            android:textSize="20sp">

        </TextView>

        <TextView
            android:layout_below="@id/dialog_title2"
            android:id="@+id/dialog_desk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/sfbold"
            android:text=" "
            android:textColor="@color/color3"
            android:textSize="18sp">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_desk"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dialog_open"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:background="@drawable/custombtn5"
                android:fontFamily="@font/sfbold"
                android:text="Open"
                android:textColor="@color/color1"
                android:textSize="12sp">

            </Button>

            <Button
                android:id="@+id/dialog_close"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:background="@drawable/custombtn4"
                android:fontFamily="@font/sfreguler"
                android:text="Close"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp">

            </Button>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>