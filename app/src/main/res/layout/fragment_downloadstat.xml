<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/downloadstat_filename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text=""
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:textColor="@color/color3"
        android:textSize="14sp">

    </TextView>

    <LinearLayout
        android:id="@+id/downloadstat_linear"
        android:layout_below="@id/downloadstat_filename"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/downloadstat_progress"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:progressTint="@color/color3">

        </ProgressBar>

        <TextView
            android:id="@+id/downloadstat_size"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_below="@id/downloadstat_progress"
            android:layout_marginStart="12dp"
            android:text=""
            android:textColor="@color/colorPrimary"
            android:textSize="15sp">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/downloadstat_linear"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/downloadstat_pause"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:background="@drawable/custombtn4"
            android:text="Pause"
            android:textColor="@color/colorPrimary">

        </Button>

        <Button
            android:id="@+id/downloadstat_cancel"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_weight="1"
            android:background="@drawable/custombtn4"
            android:fontFamily="@font/sfbold"
            android:text="Cancel"
            android:textColor="@color/color7"
            android:textSize="15sp">

        </Button>

    </LinearLayout>

</RelativeLayout>