<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/directdownloadicon">

        </ImageView>

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:fontFamily="@font/sfbold"
            android:text="title"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp">

        </TextView>

        <TextView
            android:id="@+id/dialog_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_title"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/sfreguler"
            android:text="Link: asd.dwqeqe.wjeq/asdsadhjgj"
            android:textColor="@color/color3"
            android:textSize="20sp">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_below="@id/dialog_link"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dialog_downloadnow"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:background="@drawable/custombtn3"
                android:fontFamily="@font/sfbold"
                android:text="Download Now"
                android:textColor="@color/color1"
                android:textSize="12sp">

            </Button>

            <Button
                android:id="@+id/dialog_copylink"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:background="@drawable/custombtn4"
                android:fontFamily="@font/sfreguler"
                android:text="Copy Link"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp">

            </Button>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>